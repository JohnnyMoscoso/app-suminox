<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loadOrder"
    style="@style/ListContain"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <!-- Item Name -->
    <TextView
        android:id="@+id/tx_item_description"
        style="@style/TableDetailTextBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="65dip"
        android:text="@null" />
    <!-- Item Info -->
    <LinearLayout
        android:id="@+id/ll_item_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tx_item_description"
        android:layout_marginRight="65dip">
        <!-- Item Code -->
        <TextView
            android:id="@+id/tx_input_value"
            style="@style/TableDetailText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@null" />
        <!-- Item Price -->
        <TextView
            android:id="@+id/tx_input_subtotal"
            style="@style/TablaDetailTextBlue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:paddingLeft="5dip"
            android:text="@null" />
    </LinearLayout>
    <!-- Item Quantity -->
    <EditText
        android:id="@+id/tx_input_quantity"
        style="@style/TableDetailInput"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:hint="">

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/tv_item_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:textSize="12sp" />

</RelativeLayout>