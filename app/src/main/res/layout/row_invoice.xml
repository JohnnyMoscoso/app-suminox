<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loadOrder"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <!-- Item Name -->
    <TextView android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@null"
        android:layout_marginRight="65dip"/>
    <!-- Item Info -->
    <LinearLayout android:id="@+id/ll_item_info"
        android:layout_below="@id/tv_item_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="65dip">
        <!-- Item Code -->
        <TextView android:id="@+id/tv_item_code"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="@null" />
        <!-- Item Price -->
        <TextView android:id="@+id/tv_item_price"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="wrap_content"
            android:paddingLeft="5dip"
            android:text="@null"/>
    </LinearLayout>
    <!-- Item Quantity -->

    <TextView android:id="@+id/tv_item_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:text="@null"
        android:textSize="12sp" />

    <EditText
        android:id="@+id/tx_item_quantity"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="35dp"
        android:ems="10"
        android:focusable="true"
        android:focusableInTouchMode="true" />

</RelativeLayout>
